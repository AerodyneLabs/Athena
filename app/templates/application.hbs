<nav class="navbar navbar-default navbar-static-top">
	<div class="container">
		<div class="navbar-header">
			<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse">
				<span class="sr-only">Toggle navigation</span>
				{{fa-icon "bars"}}
			</button>
			{{#link-to "index" class="navbar-brand"}}Athena{{/link-to}}
		</div>
		<div class="collapse navbar-collapse" id="navbar-collapse">
			<ul class="nav navbar-nav">
				{{#link-to "prediction.wizard" tagName="li"}}
					{{#link-to "prediction.wizard.1"}}Run Prediction{{/link-to}}
				{{/link-to}}
				{{#link-to "about" tagName="li"}}
					{{#link-to "about"}}About{{/link-to}}
				{{/link-to}}
			</ul>
			<ul class="nav navbar-nav navbar-right">
				<li class="dropdown">
					<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
						{{#if session.isAuthenticated}}
							{{session.userEmail}}
						{{else~}}
							Login
						{{~/if}}
						<span class="caret"></span>
					</a>
					<div class="dropdown-menu" role="menu">
						{{#if session.isAuthenticated}}
							<a {{action 'invalidateSession'}}>Logout</a>
						{{else}}
							<a class="btn btn-default" {{action 'loginWithGoogle'}}>
								{{fa-icon "google-plus"}} Login with Google
							</a>
						{{/if}}
					</div>
				</li>
				<li class="dropdown">
					<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
						{{fa-icon "cog"}} <span class="caret"></span>
					</a>
					<div class="dropdown-menu settings-menu" role="menu">
						<div class="form-horizontal">
							<div class="form-group form-group-sm">
								<label class="col-sm-6 control-label" for="altitudeUnits">Altitude</label>
								<div class="col-sm-6">
									{{view "select" elementId="altitudeUnits" content=unitOptions.altitude value=units.altitude class="form-control"}}
								</div>
							</div>
							<div class="form-group form-group-sm">
								<label class="col-sm-6 control-label" for="distanceUnits">Distance</label>
								<div class="col-sm-6">
									{{view "select" elementId="distanceUnits" content=unitOptions.distance value=units.distance class="form-control"}}
								</div>
							</div>
							<div class="form-group form-group-sm">
								<label class="col-sm-6 control-label" for="lengthUnits">Length</label>
								<div class="col-sm-6">
									{{view "select" elementId="lengthUnits" content=unitOptions.length value=units.length class="form-control"}}
								</div>
							</div>
							<div class="form-group form-group-sm">
								<label class="col-sm-6 control-label" for="massUnits">Mass</label>
								<div class="col-sm-6">
									{{view "select" elementId="massUnits" content=unitOptions.mass value=units.mass class="form-control"}}
								</div>
							</div>
							<div class="form-group form-group-sm">
								<label class="col-sm-6 control-label" for="speedUnits">Speed</label>
								<div class="col-sm-6">
									{{view "select" elementId="speedUnits" content=unitOptions.speed value=units.speed class="form-control"}}
								</div>
							</div>
							<div class="form-group form-group-sm">
								<label class="col-sm-6 control-label" for="temperatureUnits">Temperature</label>
								<div class="col-sm-6">
									{{view "select" elementId="temperatureUnits" content=unitOptions.temperature value=units.temperature class="form-control"}}
								</div>
							</div>
						</div>
					</div>
				</li>
			</ul>
		</div>
	</div>
</nav>

<div class="container">
	{{outlet}}
	<div class="row">
		<div class="col-sm-12">
			<hr>
			<small>Provided by <a href="http://www.aerodynelabs.com">Aerodyne Labs</a> &copy; {{moment time "YYYY"}} &mdash; <a href="https://gitreports.com/issue/AerodyneLabs/Athena">Bug Reports</a></small>
		</div>
	</div>
</div>
