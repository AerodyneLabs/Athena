<g {{bind-attr transform=transformG}}>
	<g class="temperature"  {{bind-attr transform=transformX}}>
		<path class="data"></path>
		<g class="axis">
			<text class="axis-label" y="2em" dy=".35em" {{bind-attr x=tempLabel}}>
				Temperature ({{units-unit units "temperature"}})
			</text>
		</g>
	</g>
	<g class="axis altitude">
		<text class="axis-label" y=".75em" dy=".35em" transform="rotate(-90)" {{bind-attr x=verticalLabel}}>
			Altitude ({{units-unit units "altitude"}})
		</text>
	</g>
	<g class="wind" {{bind-attr transform=transformWind}}>
		<path class="data"></path>
		<g class="direction"></g>
		<g class="axis">
			<text class="axis-label" y="2em" dy=".35em" {{bind-attr x=windLabel}}>
				Wind Speed ({{units-unit units "highSpeed"}})
			</text>
		</g>
	</g>
	<g class="grid">
		<g class="altitude"></g>
		<g class="temperature"></g>
		<g class="wind" {{bind-attr transform=transformWind}}></g>
	</g>
</g>
