<h2>Location</h2>
<div class="row">
  <div class="col-md-4">
    <form>
      <div class="form-group">
        <label for="locationInput">Location</label>
        <div class="input-group">
          {{input elementId="locationInput" value=launchLocationInput class="form-control" placeholder="DD.DDDD, DDD.DDDD"}}
          <span class="input-group-btn">
            <button class="btn btn-default" type="button">{{fa-icon "search"}}</button>
          </span>
        </div>
        <span class="help-block">Latitude and longitude in signed decimal degrees.</span>
      </div>
      <div class="btn-group pull-right" role="group">
        <button class="btn btn-primary" type="button">Next</button>
      </div>
    </form>
  </div>
  <div class="col-md-8">
    Map
  </div>
</div>
