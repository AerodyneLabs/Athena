<h2>Date and Time</h2>
<div class="row">
  <div class="col-md-4">
    <form class="form-horizontal">
      <div class="form-group">
        <label for="date" class="col-md-4 control-label">Date</label>
        <div class="col-md-8">
          <div class="input-group">
            {{input elementId="date" value=date class="form-control"}}
            <span class="input-group-addon">{{fa-icon "calendar"}}</span>
          </div>
        </div>
      </div>
      <div class="form-group">
        <label for="time" class="col-md-4 control-label">Time</label>
        <div class="col-md-8">
          <div class="input-group">
            {{input elementId="time" value=time class="form-control"}}
            <span class="input-group-addon">{{fa-icon "clock-o"}}</span>
          </div>
        </div>
      </div>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Details</h3>
        </div>
        <div class="panel-body">
          Display sounding details here
        </div>
      </div>
      <div class="btn-group pull-right" role="group">
        <button class="btn btn-default" type="button" {{action "back"}}>Back</button>
        <button class="btn btn-primary" type="button" {{action "run"}}>Run Prediction</button>
      </div>
    </form>
  </div>
  <div class="col-md-8">
    Calendar
  </div>
</div>
